<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_4sdp"
    android:orientation="vertical">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_view_movie_poster"
        android:layout_width="@dimen/_160sdp"
        android:layout_height="@dimen/_150sdp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/ABG.Image.Rounded"
        tools:srcCompat="@drawable/ic_launcher_background" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_view_movie_title"
        style="@style/ABG.Text.Base"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_medium"
        android:maxLines="1"
        android:textColor="?attr/colorOnSurface"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/_8sdp"
        app:autoSizeMaxTextSize="@dimen/_8sdp"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/image_view_movie_poster"
        app:layout_constraintTop_toBottomOf="@+id/image_view_movie_poster"
        tools:text="Bad Boys: Movie App asdsad" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_view_movie_release_date"
        style="@style/ABG.Text.Base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="?attr/colorOnSurfaceVariant"
        app:autoSizeMaxTextSize="@dimen/_8sdp"
        app:autoSizeTextType="uniform"
        app:layout_constraintStart_toStartOf="@+id/text_view_movie_title"
        app:layout_constraintTop_toBottomOf="@+id/text_view_movie_title"
        tools:text="2022-02-02" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_view_rating"
        style="@style/ABG.Text.Base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="?attr/colorTertiary"
        app:layout_constraintBottom_toBottomOf="@+id/image_view_rating_icon"
        app:layout_constraintEnd_toStartOf="@id/image_view_rating_icon"
        app:layout_constraintTop_toTopOf="@+id/image_view_rating_icon"
        tools:text="8.5" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_view_rating_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_star" />




</androidx.constraintlayout.widget.ConstraintLayout>